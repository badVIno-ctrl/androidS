    public static String getRandomFactOrJoke() {
        Random random = new Random();
        boolean isJoke = random.nextBoolean();
        if (isJoke) {
            int index = random.nextInt(JOKES.size());
            return "шутка: " + JOKES.get(index);
        } else {
            int index = random.nextInt(FACTS.size());
            return "факт: " + FACTS.get(index);
        }
    }
